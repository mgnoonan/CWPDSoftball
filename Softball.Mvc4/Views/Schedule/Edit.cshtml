@model Softball.Mvc4.Game

@{
    ViewBag.Title = DateTime.Now.Year + " Centerville Softball - Edit Schedule";
}

<h2>Edit Game</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.GameID)

    <div class="editor-label">
        @Model.Opponent
    </div>
    <div class="editor-field">
    &nbsp;
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Game1Result)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Game1Result)
        @Html.ValidationMessageFor(model => model.Game1Result)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Game2Result)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Game2Result)
        @Html.ValidationMessageFor(model => model.Game2Result)
    </div>

    <div id="appSummary" style="margin-top: 24px;">
        <div id="licenseOptions">
            <a id="submitButton" class="purchase" href="#">Save</a>
            @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "purchase" })
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#submitButton').click(function (event) {
            event.preventDefault();
            $(this).parents('form').submit();
        });
    });
</script>
